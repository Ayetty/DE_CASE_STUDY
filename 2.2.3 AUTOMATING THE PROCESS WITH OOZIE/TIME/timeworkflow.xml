<?xml version="1.0" encoding="UTF-8"?>
<workflow-app xmlns="uri:oozie:workflow:0.2" name="timeone">
    <start to="timejob"/>    
    
    <action name="timejob">
        <sqoop xmlns="uri:oozie:sqoop-action:0.2">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <prepare>
              <delete path="${nameNode}/user/maria_dev/Credit_Card_System/CDW_SAPP_D_TIME"/>
            </prepare>
            <configuration>
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
            </configuration>
            <command>job --meta-connect jdbc:hsqldb:hsql://localhost:16000/sqoop --exec timeJob</command>		 		
	    
	    <archive>/user/maria_dev/lib/java-json.jar#java-json.jar</archive>
        </sqoop>
        <ok to="CREATE_EXTERNAL_TABLE_CDW_SAPP_D_TIME_ONE"/>
        <error to="fail"/>
    </action>

   <action name = "CREATE_EXTERNAL_TABLE_CDW_SAPP_D_TIME_ONE">
      <hive xmlns = "uri:oozie:hive-action:0.4">
         <job-tracker>${jobTracker}</job-tracker>
         <name-node>${nameNode}</name-node>
         <script>${nameNode}/user/maria_dev/Credit_Card_System/CDW_SAPP_D_TIME_TWO/externaltime.Hive</script>
      </hive>
		
      <ok to = "CREATE_EXTERNAL_TABLE_CDW_SAPP_D_TIME" />
      <error to = "kill_job" />
   </action>
   
   <action name = "CREATE_EXTERNAL_TABLE_CDW_SAPP_D_TIME">
      <hive xmlns = "uri:oozie:hive-action:0.4">
        <job-tracker>${jobTracker}</job-tracker>
         <name-node>${nameNode}</name-node>

         <script>${nameNode}/user/maria_dev/Credit_Card_System/CDW_SAPP_D_TIME_TWO/time.Hive</script>
      </hive>
		
      <ok to = "Insert_into_Time" />
      <error to = "kill_job" />
   </action>
   
   <action name = "Insert_into_Time">
      <hive xmlns = "uri:oozie:hive-action:0.4">
         <job-tracker>${jobTracker}</job-tracker>
         <name-node>${nameNode}</name-node>

         <script>${nameNode}/user/maria_dev/Credit_Card_System/CDW_SAPP_D_TIME_TWO/Timedata.Hql</script>
        
      </hive>

 <ok to = "end" />
 <error to = "kill_job" />
</action>
<kill name = "fail">
      <message>Job failed</message>
   </kill>
   
   <kill name = "kill_job">
      <message>Job failed</message>
   </kill>
	
   <end name = "end" />
</workflow-app>

